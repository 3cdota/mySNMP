@model System.Data.DataTable
@using System.Data
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <caption>@Model.TableName</caption>
    <thead>
        <tr>

            @foreach (DataColumn col in Model.Columns)
            {
                <th>
                    @col.ColumnName
                </th>
            }

        </tr>
    </thead>

    @foreach (DataRow row in Model.Rows)
    {
        <tr>
            @foreach (var item in row.ItemArray)
            {
                <td>@item.ToString()</td>
            }

        </tr>
    }
</table>
